{
  "manifest_version": 3,
  "name": "EzSpeak",
  "description": "Live translation and transcription for online meetings.",
  "version": "0.1",

  "action": {
    "default_popup": "src/popup/popup.html",
    "default_icon": "assets/test.jpg"
  },

  "icons": {
    "16": "assets/test.jpg",
    "32": "assets/test.jpg",
    "48": "assets/test.jpg",
    "128": "assets/test.jpg"
  },

  "background": {
    "service_worker": "src/background/background.js"
  },
  "side_panel": {
    "default_path": "src/sidepanel/sidepanel.html"
  },
  "options_page": "src/options/options.html",

  "permissions": [
    "tabCapture",
    "offscreen",
    "storage",
    "tabs",
    "sidePanel",
    "activeTab"
  ],

  "host_permissions": [
    "https://*.azure.com/*",
    "*://*/*"
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "src/worklets/pcm-worklet.js"
      ],
      "matches": ["<all_urls>"]
    }
  ]
}
